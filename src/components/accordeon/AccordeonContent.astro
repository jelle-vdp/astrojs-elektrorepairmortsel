---
import { Icon } from 'astro-icon';

const { problem, symptoms, causesSolutions } = Astro.props
---

<section class="accordeon__content accordeon__content--hidden">
        <div class="accordeon__problem grid grid-cols-10 gap-5">
                <h4 class="col-span-8 py-12 px-14">{problem}</h4>
                <div class="accordeon__toggle col-span-2 flex justify-center items-center">
                        <Icon name="accordeon-plus" />
                        <Icon name="accordeon-minus" />
                </div>
        </div>
        <div class="accordeon__information grid grid-cols-10">
                <div class="col-span-10 grid grid-cols-10 py-12">
                        <div class="accordeon__symptoms col-span-9 col-start-2 mb-32">
                                <ul class="ml-6">
                                        {symptoms.map(symptom => <li>{symptom}</li>)}
                                </ul>
                        </div>
                        <div class="accordeon__causes col-span-9 col-start-2">
                                <ul class="ml-6">
                                        {causesSolutions.map(item =>      
                                                        <li>
                                                                {item.cause}
                                                                <div>
                                                                        <Icon name="accordeon-solution-arrow" />
                                                                        <span>{item.solution}</span>
                                                                </div>
                                                        </li>
                                                )
                                        }
                                </ul>
                        </div>
                </div> 
        </div>
</section>

<style lang="scss">
        @import "../../style/_variables.scss";

        .accordeon__content {
                background-color: $darkbrown;
                margin-left: var(--gap);

                &:first-of-type {
                        border-top-right-radius: 50px;
                }

                &:last-of-type {
                        border-radius: 0 0 20px 20px;
                }

                &:not(:last-of-type) {
                        position: relative;

                        &::after {
                                content: "";
                                position: absolute;
                                bottom: 0;
                                left: 40px;
                                width: calc(100% - 80px);
                                height: 2px;
                                background-color: $white;
                        }
                }

                .accordeon__problem {

                        &:hover {
                                cursor: pointer;
                                transition: color 0.3s ease-in-out;

                                h4 {
                                        color: $orange;

                                        &::before {
                                                color: $white;
                                        }
                                }

                                svg {
                                        fill: $orange !important;
                                }
                        }

                        h4 {
                                color: $white;
                                font-size: 2.5rem;
                                font-weight: 700;
                                position: relative;

                                &::before {
                                        content:"Probleem";
                                        letter-spacing: 1px;
                                        text-transform: uppercase;
                                        font-size: 0.75rem;
                                        position: absolute;
                                        top: 1.5rem;
                                        left: 40px;
                                        font-weight: 400;
                                }
                        }

                        .accordeon__toggle {
                                svg {
                                        fill: $white;
                                        transition: fill 0.3s ease-in-out;
                                        width: 66px;
                                        height: 66px;
                                        cursor: pointer;
                                }
                        }
                }

                &:not(.accordeon__content--hidden) .accordeon__problem .accordeon__toggle {
                        svg {
                                &:first-child {
                                        display: none;
                                }

                                &:last-child {
                                        display: block;
                                }
                        }
                }

                &.accordeon__content--hidden .accordeon__problem .accordeon__toggle {
                        svg {
                                &:first-child {
                                        display: block;
                                }

                                &:last-child {
                                        display: none;
                                }
                        }
                }

                &--hidden .accordeon__toggle {
                        svg {
                                &:first-child {
                                        display: block !important;
                                }

                                &:last-child {
                                        display: none !important;
                                }
                        }
                }

                .accordeon__information {
                        display: grid;
                        grid-template-rows: 1fr;
                        transition: grid-template-rows 0.5s ease-in-out;

                        > div {
                                overflow: hidden;
                                padding-top: 3rem;
                                padding-bottom: 3rem;
                                transition: padding 0.5s ease-in-out;
                        }
                }

                &--hidden .accordeon__information {
                        grid-template-rows: 0fr;
                        
                        > div {
                                padding-top: 0rem;
                                padding-bottom: 0rem;
                        }
                }

                .accordeon__symptoms, .accordeon__causes {
                        position: relative;
                        
                        &::before {
                                text-transform: uppercase;
                                letter-spacing: 1px;
                                font-size: 0.75rem;
                                position: absolute;
                                top: -3rem;
                                left: -2.5rem;
                        }

                        ul {
                                li {
                                        position: relative;
                                        font-size: 1.375rem;
                                        line-height: 1.3;

                                        + li {
                                                margin-top: 1.6rem;
                                        }

                                        &::before {
                                                content: "â€”";
                                                font-size: 1.6rem;
                                                position: absolute;
                                                left: -2.5rem;
                                                top: -4px;
                                        }

                                        svg {
                                                width: 1.2rem;
                                        }
                                }
                        }
                }

                .accordeon__symptoms {
                        &::before {
                                content: "Symptomen";
                        }
                }

                .accordeon__causes {
                        &::before {
                                content: "Mogelijke oorzaken & oplossingen";
                        }

                        li div {
                                padding-left: 2.5rem;
                                display: flex;
                                gap: 1rem;

                                span {
                                        padding-top:6px;
                                }
                        }
                }
        }
</style>

<script>
        allProblems = document.querySelectorAll('.accordeon__content').forEach(prob => {
                prob.querySelector(".accordeon__problem").addEventListener('click', () => {
                        prob.classList.toggle('accordeon__content--hidden');
                })
        })
</script>
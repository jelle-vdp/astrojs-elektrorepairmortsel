---
import Layout from '../layouts/Layout.astro';

import homeImage from '../assets/images/1-min.jpg';

const description = 'Elektro repair Mortsel, voor al uw elektrische en elektronische herstellingen';
---

<Layout description={description}>         
        <div class="container grid grid-cols-12 lg:gap-10 auto-rows-auto">
            <div class="col-span-5 flex flex-col justify-between">
                <h1 class="text-4xl sm:text-6xl mb-12">Geef uw oud toestel een nieuw leven</h1>
                <h2 class="mb-12">Elektro repair Mortsel, voor al uw elektrische en elektronische herstellingen.</h2>
                <a href="/contact" class="btn btn--gap mr-auto">Contacteer ons</a>
            </div>
            <div class="col-span-7">
                <img src={homeImage} alt="Elektro repair Mortsel" width="800" height=600 />
            </div>
        </div>
</Layout>


<style lang="scss">
    @import "../style/_variables.scss";

    img {
        object-fit: cover;
        border: 20px solid $darkbrown;
        border-radius: 50px 50px 290px 50px;
    }
    
</style>

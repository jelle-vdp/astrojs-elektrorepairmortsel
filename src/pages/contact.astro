---
import Layout from '../layouts/Layout.astro';

const title = 'Contacteer ons';
const description = 'Contacteer voor een reparatie in Mortsel';
---
<Layout description={description} title={title}>         
    <div class="container grid grid-cols-12 lg:gap-10 auto-rows-auto">
        <div class="col-span-8 flex flex-col">
            <h1 class="col-span-8 text-4xl sm:text-6xl mb-12">Contacteer ons</h1>
            <h2 class="col-span-7 mb-12">Interesse in een reparatie? Contacteer ons via het onderstaande formulier of onze contactgegevens</h2>
        </div>
        <div class="col-span-12 grid grid-cols-12">
            <form class="col-span-7 col-start-2 px-8 py-8">
                <div>
                    <label for="name">Naam</label>
                    <input 
                        type="text" 
                        placeholder="Naam" 
                        id="name"
                        class="" 
                    />
                </div>
                <div>
                    <label for="email">Email</label>
                    <input 
                        type="email" 
                        placeholder="Email" 
                        id="email"
                        class="" 
                    />
                </div>
                <div>
                    <label for="phone">Telefoon</label>
                    <input 
                        type="tel" 
                        placeholder="Telefoon" 
                        id="phone"
                        class="" 
                    />
                </div>
                <div>
                    <label for="message">Bericht</label>
                    <textarea 
                        placeholder="Bericht" 
                        id="message"
                        class=""
                    ></textarea>
                </div>
                <button type="submit" class="btn">Verstuur uw bericht</button>
            </form>
            <aside class="contact-details col-span-4 flex flex-col mt-36 mb-auto p-8">
                <a class="contact__logo mb-12" href="/">Elektro repair Mortsel</a>
                <a class="mb-4" href="tel:0497656751"><i class="fa-solid fa-phone mr-2"></i> 0497 65 67 51</a>
                <a class="mb-4" href="mailto:info@elektrorepairmortsel.be"><i class="fa-solid fa-envelope mr-2"></i> info@elektrorepairmortsel.be</a> 
                <div class="flex mb-4 contact__address">
                    <i class="fa-solid fa-location-dot mt-1 mr-4"></i> 
                    <p>
                        Elektro repair Mortsel<br>
                        Sint-Annalei 15<br>
                        2640 Mortsel
                    </p>
                </div>
                <div class="flex contact__business">
                    <i class="fa-solid fa-briefcase mr-4"></i>
                    <p>BTWnr.: BE0790519118</p>
                </div>
            </aside>
        </div>
    </div>
</Layout>

<style lang="scss">
    @import "../style/_variables.scss";

    form {
        background-color: $darkbrown;
        border-radius: 15px 75px 25px 75px;

        > div {
            display: flex;
            flex-direction: column;
            margin-bottom: 1rem;
            gap: 0.5rem;
        }

        label {
            font-size: 0.8rem;
        }

        input, textarea {
            padding: 0.8rem 1rem;
            border-radius: 5px 20px 5px 5px;
            color: $darkbrown;

            &:focus {
                outline: none;
            }
        }

        textarea {
            resize: none;
            height: 10rem;
        }
    }

    .contact-details {
        background-color: lighten($orange, 5%);
        color: $black;
        border-radius: 0 75px 25px 0;
        position: relative;

        &::before {
            content: url('/assets/svg/inverted-radius-orange.svg');
            position: absolute;
            bottom: 100%;
            left: -1px;
            transform: rotate(180deg);
            z-index: -1;
        }

        .contact__logo {
            font-family: $headline-font;
            text-transform: uppercase;
            font-size: 2.5rem;
            font-weight: 900;
            line-height: 1;
        }

        a, p {
            font-size: 1.375rem;
            font-weight: 500;
        }

        a:has(i) {
                i {
                    transition: transform 0.2s ease-in-out;
                }
            
                &:hover i {
                    transform: rotate(20deg);
                }
        }

        .contact__address {
            i {
                font-size: 1.5rem;
            }
        }
        .contact__business {
            i {
                margin-top: 6px;
                font-size: 1.3rem;
            }
        }
    }
</style>
